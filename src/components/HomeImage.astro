---
import { Image } from 'astro:assets';
import inicioImagen from '../assets/inicio-imagen.jpg';

interface Props {
  class?: string;
  slug: string;
}

const { class: className } = Astro.props;
---

<div class:list={[
  "relative",
  "w-full",
  "h-auto",
  className
]}>
  {/* 
    Usa un valor alto pero no "max" para mejorar velocidad
    Hace que la imagen principal cargue lo antes posible
    Indica al navegador que es prioritaria
  */}
  <Image 
    src={inicioImagen}
    alt="Artistic black and white photograph"
    class="w-full h-auto object-contain grayscale transition-all duration-300"
    quality={80}
    loading="eager"
    decoding="async"
    fetchpriority="high"
  />
</div>

<style>
  /* Breakpoints de referencia en Tailwind:
     sm: 640px
     md: 768px
     lg: 1024px
     xl: 1280px
     2xl: 1536px
  */
</style>