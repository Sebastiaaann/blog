---
import Layout from '../layouts/Layout.astro';
import PlaylistHeader from '../components/PlaylistHeader.astro';
import TrackList from '../components/TrackList.astro';

// Get the music library data
const response = await fetch(`${Astro.url.origin}/music/songs.json`);
const musicLibrary = await response.json();
---

<Layout title="My Playlist">
  <div class="min-h-screen bg-gradient-to-b from-neutral-800 to-neutral-900 text-white">
    <main class="container mx-auto px-4">
      <PlaylistHeader tracks={musicLibrary.tracks} />
      <TrackList tracks={musicLibrary.tracks} />
    </main>
  </div>
</Layout> 